<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Release Date</th>
    </tr>
  </thead>
  <tbody>
    <div id="movies">
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.title %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.release_date %></td>
        </tr>
      <% end %>
    </div>
  </tbody>

</table>

<%= link_to "New movie", new_movie_path %>
